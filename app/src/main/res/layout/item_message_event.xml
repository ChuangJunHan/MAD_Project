<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"    android:layout_height="wrap_content"
    android:gravity="center"    android:padding="16dp"
    android:orientation="vertical"    android:background="@android:color/white"
    android:elevation="4dp"    android:layout_margin="12dp"
    android:clipToOutline="true"    android:radius="12dp">
    <!-- Event Details -->
    <TextView        android:id="@+id/messageText"
        android:layout_width="wrap_content"        android:layout_height="wrap_content"
        android:padding="8dp"        android:text="Event Details"
        android:textColor="@android:color/black"        android:textStyle="bold"
        android:textSize="18sp"
        android:letterSpacing="0.03" /></LinearLayout>