<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"    android:layout_height="wrap_content"
    android:orientation="vertical"    android:padding="16dp"
    android:background="@drawable/background_gradient"    android:layout_marginBottom="12dp"
    android:elevation="6dp"    android:clipToOutline="true"
    android:radius="16dp"    android:layout_margin="12dp"
    android:translationZ="4dp"    android:shadowColor="@android:color/darker_gray">
    <!-- Task Name -->
    <TextView        android:id="@+id/taskName"
        android:layout_width="match_parent"        android:layout_height="wrap_content"
        android:paddingBottom="10dp"        android:text="Task Name"
        android:textAlignment="center"        android:textColor="@android:color/black"
        android:textSize="22sp"        android:textStyle="bold"
        android:fontFamily="sans-serif-medium" />
    <!-- Deadline -->
    <TextView
        android:id="@+id/taskDeadline"        android:layout_width="match_parent"
        android:layout_height="wrap_content"        android:paddingBottom="12dp"
        android:text="Deadline: DD-MM-YYYY"        android:textAlignment="center"
        android:textColor="@android:color/black"        android:textSize="16sp"
        android:fontFamily="sans-serif"        android:letterSpacing="0.02" />

    <TextView
        android:id="@+id/taskProgress"        android:layout_width="match_parent"
        android:layout_height="wrap_content"        android:paddingBottom="12dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"        android:textSize="16sp"
        android:fontFamily="sans-serif"        android:letterSpacing="0.02" />
    <!-- View Details Button -->
    <Button        android:id="@+id/viewDetailsButton"
        android:layout_width="match_parent"        android:layout_height="48dp"
        android:layout_marginTop="12dp"        android:backgroundTint="?attr/colorPrimary"
        android:text="View Details"        android:textColor="@android:color/white"
        android:textSize="16sp"        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/rounded_button"/></LinearLayout>